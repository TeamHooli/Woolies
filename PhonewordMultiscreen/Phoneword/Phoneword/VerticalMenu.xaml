<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Phoneword.VerticalMenu" BackgroundImage="Menu.png">
	<ContentPage.Content>

	<StackLayout  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Vertical" Spacing="0">
	<Button x:Name="TransactionButton" HeightRequest="100" Opacity="0"/>
	<Button x:Name="ShoppingButton" HeightRequest="100" Opacity="0"/>
	<Button x:Name="RecipesButton" HeightRequest="100" Opacity="0" Clicked="RecipesButtonClick"/>
	<Button x:Name="StoreButton" HeightRequest="100" Opacity="0"/>
	<Button x:Name="DiscountButton" HeightRequest="100" Opacity="0" Clicked="DiscountButtonClick"/>
	</StackLayout>
	</ContentPage.Content>
</ContentPage>
